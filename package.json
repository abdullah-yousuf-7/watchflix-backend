{
  "name": "watchflixx-backend",
  "version": "1.0.0",
  "description": "WatchFlixx streaming platform backend API",
  "main": "dist/server.js",
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "nodemon gateway/src/server.ts",
    "start": "node dist/server.js",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:generate:force": "npx prisma generate --schema=./prisma/schema.prisma",
    "db:generate-all": "npm run generate-prisma-client --workspaces --if-present",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:studio": "prisma studio",
    "services:auth": "nodemon --exec tsx services/auth/src/server.ts",
    "services:content": "nodemon --exec tsx services/content/src/server.ts",
    "services:streaming": "nodemon --exec tsx services/streaming/src/server.ts",
    "services:payment": "nodemon --exec tsx services/payment/src/server.ts",
    "services:social": "nodemon --exec tsx services/social/src/server.ts",
    "services:analytics": "nodemon --exec tsx services/analytics/src/server.ts",
    "services:notification": "nodemon --exec tsx services/notification/src/server.ts",
    "gateway": "nodemon --exec tsx gateway/src/server.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "streaming",
    "ott",
    "video",
    "platform",
    "backend",
    "api",
    "nodejs",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "WatchFlixx Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/stripe": "^8.0.417",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "stripe": "^14.9.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
